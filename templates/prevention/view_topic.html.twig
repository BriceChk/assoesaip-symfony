{% extends 'prevention/prevention_base.html.twig' %}

{% block title %}Asso'esaip - Topic
{% endblock %}

{% block body %}
	<main>
		<div class="container py-4">
			<h1>{{topic.title}}</h1>
			<h3>{{topic.isAnonymous ? topic.author.getAnonymousId : topic.author.fullname}},
				{{topic.creationDate|date('d/m/Y')}}</h3>
			{% for tag in topic.tags %}
				<i>{{tag.name}}</i>
			{% endfor %}
			<p>{{topic.content}}</p>
			<hr class="my-4">
			<h2>RÃ©ponses</h2>
			<div class="form-group">
				<input type="text" class="form-control">
				<button class="btn btn-primary">Envoyer</button>
			</div>
			{% for response in topic.topicResponses %}
				<div class="response">
					<p>
						<strong>{{response.isAnonymous ? response.author.anonymousId : response.author.fullname}}</strong>,
						{{response.responseDate|date('H:i, d/m/Y')}}
					</p>
					<p>{{response.content}}</p>
				</div>
			{% endfor %}
		</div>
	</main>
{% endblock %}
