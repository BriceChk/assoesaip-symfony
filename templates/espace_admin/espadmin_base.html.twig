<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="Espace dédié aux administrateurs du site.">
    <meta name="author" content="BDE ESAIP Angers">

    <title>{% block title %}Asso'esaip - Administration{% endblock %}</title>

    {% block stylesheets %}
        <!-- Icones -->
        <link rel="apple-touch-icon" sizes="180x180" href="{{ asset('build/images/icons/apple-touch-icon.png') }}">
        <link rel="icon" type="image/png" sizes="32x32" href="{{ asset('build/images/icons/favicon-32x32.png') }}">
        <link rel="icon" type="image/png" sizes="16x16" href="{{ asset('build/images/icons/favicon-16x16.png') }}">
        <link rel="mask-icon" href="{{ asset('build/images/icons/safari-pinned-tab.svg') }}" color="#5bbad5">
        <link rel="icon" href="{{ asset('build/images/icons/fav.ico') }}" type="image/x-icon" />
        <link rel="shortcut icon" href="{{ asset('build/images/icons/fav.ico') }}" type="image/x-icon" />
        <meta name="msapplication-config" content="{{ asset('build/images/icons/browserconfig.xml') }}">
        <meta name="msapplication-TileColor" content="#212529">
        <meta name="theme-color" content="#212529">


        {{ encore_entry_link_tags('app') }}
        {{ encore_entry_link_tags('espace_asso') }}

        <meta name="robots" content="noindex">
    {% endblock %}
</head>

<body class="hold-transition sidebar-mini">
<div class="wrapper">
    <!-- Navbar -->
    <nav class="navbar navbar-expand-xl navbar-esaip elevation-2">
        <ul class="navbar-nav" style="margin-right: 20px; margin-left: 5px;">
            <li class="nav-item">
                <a class="nav-link" data-widget="pushmenu" href="#"><i class="fas fa-bars"></i></a>
            </li>
        </ul>
        <a class="navbar-brand" href="/">
            <img src="{{ asset('build/images/icons/android-chrome-144x144.png') }}" style="margin-right: 10px; margin-top: -5px; width: 36px; height: 36px;" alt="logo_esaip">
            Asso'esaip
        </a>

        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <!-- Left navbar links -->
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item {{ app.request.get('_route') == 'home' ? 'active' }}">
                    <a class="nav-link" href="{{ path('home') }}">Accueil</a>
                </li>
            </ul>


            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('espace_assos_no_project') }}">Espace assos</a>
                </li>
                <li class="nav-item dropdown dropleft active">
                    <a class="nav-link dropdown-toggle" href="#" id="profileDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        {{ app.user.fullName }}
                    </a>
                    <div class="dropdown-menu" aria-labelledby="profileDropdown">
                        <a class="dropdown-item" href="{{ path('profile') }}">Modifier mon profil</a>
                        <a class="dropdown-item" href="{{ path('app_logout') }}">Déconnexion</a>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item" href="{{ path('project', {url: 'assoesaip'}) }}">À propos</a>
                        <a class="dropdown-item active" href="{{ path('espace_admin') }}">Administration</a>
                    </div>
                </li>
            </ul>
        </div>
    </nav>
    <!-- /.navbar -->

    <!-- Main Sidebar Container -->
    <aside class="main-sidebar navbar-esaip sidebar-light-white elevation-4">
        <!-- Sidebar -->
        <div class="sidebar">
            {% set route = app.request.get('_route') %}

            <!-- Sidebar Menu -->
            <nav class="mt-2">
                <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                    <li class="nav-item">
                        <a href="{{ path('espace_admin') }}" class="nav-link {{ route == 'espace_admin' ? 'active' : 'text-white' }}">
                            <i class="nav-icon fas fa-home"></i>
                            <p>Accueil</p>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="{{ path('espace_admin_projects') }}" class="nav-link {{ route == 'espace_admin_projects' ? 'active' : 'text-white' }}">
                            <i class="nav-icon fas fa-project-diagram"></i>
                            <p>Projets</p>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="{{ path('espace_admin_categories') }}" class="nav-link {{ route == 'espace_admin_categories' ? 'active' : 'text-white' }}">
                            <i class="nav-icon fas fa-list"></i>
                            <p>Catégories</p>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="{{ path('espace_admin_admins') }}" class="nav-link {{ route == 'espace_admin_admins' ? 'active' : 'text-white' }}">
                            <i class="nav-icon fas fa-users-cog"></i>
                            <p>Admins</p>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="{{ path('espace_admin_roombooks') }}" class="nav-link {{ route == 'espace_admin_roombooks' ? 'active' : 'text-white' }}">
                            <i class="nav-icon fas fa-map-marker-alt"></i>
                            <p>Réservations de salle</p>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="{{ path('espace_admin_news_list') }}" class="nav-link {{ 'espace_admin_news' in route ? 'active' : 'text-white' }}">
                            <i class="nav-icon fas fa-newspaper"></i>
                            <p>News vie asso</p>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="{{ path('espace_admin_ressources') }}" class="nav-link {{ route == 'espace_admin_ressources' ? 'active' : 'text-white' }}">
                            <i class="nav-icon fas fa-pager"></i>
                            <p>Pages ressources</p>
                        </a>
                    </li>

                </ul>
            </nav>

        </div>
        <!-- /.sidebar -->
    </aside>

    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col">
                        <h1>{% block header %}{% endblock %}</h1>
                    </div>
                </div>
            </div><!-- /.container-fluid -->
        </section>

        {% block body %}{% endblock %}
    </div>
    <!-- /.content-wrapper -->

    <!-- Control Sidebar -->
    <aside class="control-sidebar control-sidebar-dark">
        <!-- Control sidebar content goes here -->
    </aside>
    <!-- /.control-sidebar -->
</div>

{% block javascripts %}
    {{ encore_entry_script_tags('app') }}
{% endblock %}
</body>
</html>
