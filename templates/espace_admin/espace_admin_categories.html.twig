{% extends 'espace_admin/espadmin_base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('espace_admin_categories') }}
{% endblock %}

{% block header %}Catégories{% endblock %}

{% block body %}
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-xl-4">
                    <div class="card">
                        <div class="card-header">
                            Catégories projet
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <select class="form-control" id="inputCateg">
                                    <option value="-1">Nouvelle catégorie</option>
                                    {% for c in projects %}
                                        <option value="{{ c.id }}" data-url="{{ c.url }}" data-description="{{ c.description }}" data-order="{{ c.listOrder }}" data-visible="{{ c.visible }}">{{ c.name }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                            <form id="form-categ">
                                <div class="form-group">
                                    <label for="inputNameCateg">Nom de la catégorie</label>
                                    <input type="text" class="form-control" id="inputNameCateg" placeholder="Entrer le nom de la catégorie.">
                                </div>
                                <div class="form-group">
                                    <label for="inputUrl">URL <span class="text-muted text-sm">(Utilisé dans https://asso.esaip.org/categorie/<b>url-categorie</b>)</span></label>
                                    <input type="text" class="form-control" id="inputUrl" placeholder="Exemple : vie-associative">
                                    <small id="urlHelp" class="form-text text-muted">L'URL est généré automatiquement. Modifiez le pour le rendre court et explicite.</small>
                                </div>
                                <div class="form-group">
                                    <label for="inputDescription">Phrase de description</label>
                                    <textarea class="form-control" id="inputDescription" rows="2"></textarea>
                                </div>
                                <div class="form-group">
                                    <label for="inputOrder">Ordre</label>
                                    <input type="number" class="form-control" id="inputOrder">
                                </div>
                                <div class="form-group form-check">
                                    <input type="checkbox" class="form-check-input" id="inputVisible">
                                    <label class="form-check-label" for="inputVisible">Visible</label>
                                </div>
                                <div class="form-group">
                                    TODO : Image de catégorie
                                </div>
                            </form>
                            <button onclick="saveProjectCategory()" id="bouton-enregistrer-categorie" class="btn btn-primary">Enregistrer</button>
                            <button onclick="deleteCategory('project')" id="bouton-supprimer-categorie" class="btn btn-danger">Supprimer</button>
                        </div>
                    </div>
                </div>
                <div class="col-xl-4">
                    <div class="card">
                        <div class="card-header">
                            Catégories articles
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <select class="form-control" id="inputCategArticle">
                                    <option value="-1">Nouvelle catégorie</option>
                                    {% for c in articles %}
                                        <option value="{{ c.id }}" data-color="{{ c.color }}">{{ c.name }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                            <form id="form-categ-article">
                                <div class="form-group">
                                    <label for="inputNameCategArticle">Nom de la catégorie</label>
                                    <input type="text" class="form-control" id="inputNameCategArticle" placeholder="Entrer le nom de la catégorie.">
                                </div>
                                <div class="form-group">
                                    <label for="inputColorArticle">Couleur</label>
                                    <input class="form-control" id="inputColorArticle" type="color"/>
                                </div>
                            </form>
                            <button onclick="saveOtherCateg('article')" class="btn btn-primary">Enregistrer</button>
                            <button onclick="deleteCategory('article')" class="btn btn-danger">Supprimer</button>
                        </div>
                    </div>
                </div>
                <div class="col-xl-4">
                    <div class="card">
                        <div class="card-header">
                            Catégories événements
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <select class="form-control" id="inputCategEvent">
                                    <option value="-1">Nouvelle catégorie</option>
                                    {% for c in events %}
                                        <option value="{{ c.id }}" data-color="{{ c.color }}">{{ c.name }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                            <form id="form-categ-event">
                                <div class="form-group">
                                    <label for="inputNameCategEvent">Nom de la catégorie</label>
                                    <input type="text" class="form-control" id="inputNameCategEvent" placeholder="Entrer le nom de la catégorie.">
                                </div>
                                <div class="form-group">
                                    <label for="inputColorEvent">Couleur</label>
                                    <input class="form-control" id="inputColorEvent" type="color"/>
                                </div>
                            </form>
                            <button onclick="saveOtherCateg('event')" class="btn btn-primary">Enregistrer</button>
                            <button onclick="deleteCategory('event')" class="btn btn-danger">Supprimer</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- /.content -->
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('espace_admin_categories') }}
{% endblock %}
